<%# app/components/movies/table_component.html.erb #%>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像</th>
      <th>上映状態</th>
      <th>作成日</th>
      <th>更新日</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
        <%= render Movies::RowComponent.new(movie: movie) %> 
    <% end %>
  </tbody>
</table>
