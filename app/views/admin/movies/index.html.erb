<h1>Movie List</h1>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像</th>
    <th>上映状況</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
      <td>
        <a href="<%= movie.image_url %>">
          <img src="<%= movie.image_url %>" alt="Movie Image" width="100">
        </a>
      </td>
      <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
  <% end %>
</table>

