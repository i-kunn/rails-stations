<h1>Movie List</h1>
<form action="<%= movies_path %>" method="get">
  <label>
    <input type="radio" name="is_showing" value="" <%= params[:is_showing] == "" ? 'checked' : '' %>> すべて
  </label>
  <label>
    <input type="radio" name="is_showing" value="1" <%= params[:is_showing] == "1" ? 'checked' : '' %>> 上映中
  </label>
  <label>
    <input type="radio" name="is_showing" value="0" <%= params[:is_showing] == "0" ? 'checked' : '' %>> 公開予定
  </label>
  <label>
    <input type="text" name="keyword" placeholder="キーワードを入力" value="<%= params[:keyword] %>">
  </label>
  <input type="submit" value="検索">
</form>


<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像</th>
    <th>上映状態</th>
    <th>作成日</th>
    <th>更新日</th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
      <td>
        <a href="<%= movie.image_url %>">
          <img src="<%= movie.image_url %>" alt="Movie Image" width="100">
        </a>
      </td>
      <td><%= movie.is_showing ? '上映中' : '公開予定' %></td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
  <% end %>
</table>


