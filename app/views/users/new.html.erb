<h1>ユーザー登録</h1>

<%= form_with model: @user, url: user_registration_path, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, "メールアドレス" %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "パスワード" %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, "確認用パスワード" %><br>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "登録する" %>
  </div>
<% end %>
